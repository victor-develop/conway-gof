{
  "name": "conway-game-of-life",
  "version": "0.0.0",
  "description": "A multi-player conway-game-of-life.",
  "main": "dist/server/index.js",
  "scripts": {
    "transpile": "node node_modules/typescript/lib/tsc",
    "pack": "./node_modules/.bin/webpack",
    "build": "npm run transpile && npm run pack",
    "debug": "node --inspect=0.0.0.0:5555 dist/server/src",
    "build-serve": "npm run build && npm run debug",
    "dev": "./node_modules/nodemon/bin/nodemon.js --exec 'npm run build-serve' ",
    "serve": "node dist/server/src",
    "lint": "node_modules/tslint/bin/tslint ts_code/**/*.ts",
    "test": "npm run transpile && node_modules/mocha/bin/mocha dist/**/*.spec.js",
    "heroku-deploy": "npm install && npm run build && npm run serve"
  },
  "keywords": [
    "conway",
    "conway-game",
    "node",
    "docker",
    "multi-player",
    "multiplayer"
  ],
  "author": "Victor <victor.develop@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/cheerio": "0.22.6",
    "@types/express": "4.0.39",
    "@types/mocha": "2.2.44",
    "@types/node": "8.0.58",
    "@types/supertest": "^2.0.4",
    "cheerio": "1.0.0-rc.2",
    "express": "4.16.2",
    "mocha": "4.0.1",
    "nodemon": "1.12.5",
    "supertest": "3.0.0",
    "ts-loader": "3.2.0",
    "tslint": "5.8.0",
    "tslint-config-airbnb-base": "0.1.0",
    "typescript": "2.6.2",
    "webpack": "3.10.0"
  },
  "dependencies": {
    "@types/tinycolor2": "1.4.0",
    "eventemitter3": "3.0.0",
    "vue": "2.5.10"
  }
}
